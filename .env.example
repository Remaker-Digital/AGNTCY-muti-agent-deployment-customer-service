# AGNTCY Multi-Agent Customer Service Platform - Environment Variables Template
# Copy this file to .env and update with your actual values
# NEVER commit .env file to Git - it contains secrets!

# ============================================================================
# PHASE 1-3: Local Development Configuration
# ============================================================================

# Project Configuration
PROJECT_NAME=agntcy-customer-service
ENVIRONMENT=development
LOG_LEVEL=INFO

# AGNTCY SDK Configuration
AGNTCY_ENABLE_TRACING=true
OTLP_HTTP_ENDPOINT=http://localhost:4318

# SLIM Transport Configuration (AGNTCY messaging)
SLIM_ENDPOINT=http://localhost:46357
SLIM_GATEWAY_PASSWORD=changeme_local_dev_password

# NATS Transport Configuration (Alternative to SLIM)
NATS_ENDPOINT=localhost:4222

# Database Configuration (ClickHouse for observability)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=admin
CLICKHOUSE_PASSWORD=admin

# Observability Configuration
GRAFANA_URL=http://localhost:3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Agent Configuration
INTENT_CLASSIFICATION_TOPIC=intent-classifier
KNOWLEDGE_RETRIEVAL_TOPIC=knowledge-retrieval
RESPONSE_GENERATION_TOPIC=response-generator-en
ESCALATION_TOPIC=escalation-handler
ANALYTICS_TOPIC=analytics-collector

# Mock API Configuration (Phase 1-3 only)
MOCK_SHOPIFY_URL=http://localhost:8001
MOCK_ZENDESK_URL=http://localhost:8002
MOCK_MAILCHIMP_URL=http://localhost:8003
MOCK_GOOGLE_ANALYTICS_URL=http://localhost:8004

# ============================================================================
# PHASE 4-5: Azure Production Configuration (Not used in Phase 1-3)
# ============================================================================

# Azure Configuration
# AZURE_SUBSCRIPTION_ID=your-subscription-id
# AZURE_RESOURCE_GROUP=agntcy-customer-service-rg
# AZURE_REGION=eastus

# Azure Key Vault
# AZURE_KEY_VAULT_NAME=agntcy-cs-kv
# AZURE_KEY_VAULT_URL=https://agntcy-cs-kv.vault.azure.net/

# Azure Cosmos DB
# COSMOS_DB_ENDPOINT=https://agntcy-cs-cosmos.documents.azure.com:443/
# COSMOS_DB_KEY=stored-in-key-vault

# Azure Redis Cache
# REDIS_HOST=agntcy-cs-redis.redis.cache.windows.net
# REDIS_PORT=6380
# REDIS_PASSWORD=stored-in-key-vault
# REDIS_SSL=true

# Azure Container Registry
# ACR_NAME=agntcycsacr
# ACR_LOGIN_SERVER=agntcycsacr.azurecr.io

# Real API Keys (Phase 4-5 only - stored in Azure Key Vault)
# SHOPIFY_API_KEY=stored-in-key-vault
# SHOPIFY_API_SECRET=stored-in-key-vault
# SHOPIFY_ACCESS_TOKEN=stored-in-key-vault
# SHOPIFY_STORE_URL=your-store.myshopify.com

# ZENDESK_SUBDOMAIN=your-subdomain
# ZENDESK_EMAIL=your-email@example.com
# ZENDESK_API_TOKEN=stored-in-key-vault

# MAILCHIMP_API_KEY=stored-in-key-vault
# MAILCHIMP_AUDIENCE_ID=stored-in-key-vault

# GOOGLE_ANALYTICS_PROPERTY_ID=your-property-id
# GOOGLE_ANALYTICS_SERVICE_ACCOUNT_JSON=stored-in-key-vault

# LLM/AI Service (Phase 4-5 only)
# AZURE_OPENAI_ENDPOINT=https://your-instance.openai.azure.com/
# AZURE_OPENAI_API_KEY=stored-in-key-vault
# AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Or use OpenAI directly
# OPENAI_API_KEY=stored-in-key-vault
# OPENAI_MODEL=gpt-4-turbo-preview
